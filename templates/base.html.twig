<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('css/style.css') }}">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
    {% endblock %}

    {% block javascripts %}
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>
    {% endblock %}
</head>
<body>
{% block body %}
    {% block navbar %}
        <nav class="navbar navbar-expand-lg">
            <div class="container-fluid">
                <a class="navbar-brand" href="{{ path('home') }}"><img src="{{ asset('img/logo.jpg') }}" width="30%"></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"><i class="bi bi-border-width"></i></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('home') }}">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('training') }}">Trainingen</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('register') }}">Registreren</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        <li class="nav-item text-end">
                            <a class="nav-link" href="{{ path('login') }}">Inloggen</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        <img src="{{ asset('img/banner.jpg') }}" width="100%">
    {% endblock %}

    {% block text %} {% endblock %}

    {% block footer %}
        <footer class="m-0">
            <div class="container-fluid m-0 p-0">
                <div class="card text-center footer">
                    <div class="card-header text-white">
                        <h6>&copy Trainings Factory Den Haag</h6>
                    </div>
                    <div class="container">
                        <div class="row">
                            <div class="col-4">
                                <div class="card-body">
                                    <h5 class="card-title">Onze contactgegevens:</h5>
                                    <p class="card-text">Naam: Trainings Factory</p>
                                    <p class="card-text">Plaats: Den Haag</p>
                                    <p class="card-text">Tel: 06 11111111 van 9:00 tot 18:00</p>
                                    <p class="card-text">Postcode: 1234 WE</p>
                                    <p class="card-text">Adres: appelstraat 1</p>
                                </div>
                            </div>
                            <div class="col-4">
                                <div class="card-body">
                                    <h5 class="card-title">Onze openingstijden:</h5>
                                    <div class="row">
                                        <div class="col-6">
                                            <p class="card-text text-time">Maandag:</p>
                                            <p class="card-text text-time">Dinsdag:</p>
                                            <p class="card-text text-time">Woensdag:</p>
                                            <p class="card-text text-time">Donderdag:</p>
                                            <p class="card-text text-time">Vrijdag:</p>
                                            <p class="card-text text-time">Zaterdag:</p>
                                            <p class="card-text text-time">Zondag:</p>
                                        </div>
                                        <div class="col-6">
                                            <p class="card-text">8:30 - 19:30</p>
                                            <p class="card-text">7:30 - 19:00</p>
                                            <p class="card-text">9:00 - 18:00</p>
                                            <p class="card-text">10:00 - 19:00</p>
                                            <p class="card-text">8:30 - 19:30</p>
                                            <p class="card-text">10:00 - 21:00</p>
                                            <p class="card-text">9:00 - 19:00</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-4">
                                <div class="card-body">
                                    <h5 class="card-title">Locatie</h5>
                                    <div class="row">
                                        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2459.552827676347!2d5.198740100000001!3d51.942109599999995!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47c66065109627c1%3A0xc3f152cf892fad1b!2sTraining%20Factory%20Culemborg%20(TFC)!5e0!3m2!1snl!2snl!4v1684911396321!5m2!1snl!2snl" height="300" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </footer>
    {% endblock %}
{% endblock %}
</body>
</html>
