{% extends 'member.html.twig' %}

{% block text %}
    <div class="container">
        <p class="text-center mt-2">Welkom op de lesoverzichtspagina van Trainings Factory. Hieronder kunt u klikken op een les die u wilt gaan volgen</p>
        <h6 class="text-center">Er zijn momenteel {{ training|length }} verschillende trainingen</h6>

        <div class="row">
            {% for trainings in training %}
                <div class="card mx-1 mt-2" style="width: 20rem;">
                    <img src="{{ asset(trainings.image ) }}"><hr>
                    <h6 class="text-center"><b>{{ trainings.title }}</b></h6>
                    <div class="card-text text-black">{{ trainings.description }}</div>
                    <div class="card-text text-center text-black"><hr>de training duurt {{ trainings.duration }} minuten</div>
                    <button class="btn btn-dark pt-2"><a href="{{ path('member_training', {id: trainings.id }) }}" class="text-decoration-none text-white">Inschrijven</a></button>
                <br>
                </div>
            {% endfor %}
        </div>
    </div>
    <style>
        .text-black {
            color: black!important;
        }
    </style>
{% endblock %}